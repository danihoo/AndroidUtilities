<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="backgroundColor">@android:color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="LoadDialogTheme">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="LoadAnimation">
        <item name="android:windowEnterAnimation">@anim/load_in</item>
        <item name="android:windowExitAnimation">@anim/load_out</item>
    </style>
</resources>